package ifstate;

import java.util.Scanner;

public class IfEX1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("정수값 입력 >> ");
		int value = sc.nextInt();
		if (value >= 0) {
			System.out.println("입력된 값 : " + value);
		}
		else {
			System.out.println("입력된 값 : " + value + "\n음수입니다.");
		}
		// if + else의 응용 : 중복제거
		// - 중복제거 도중에 할 게 없는 조건문이 생긴다.
		// - 할 게 없으면 제거함
		// # if 단독사용 : 중복 제거를 하다보면 등장함
		// - if / else 둘 중 하나에서 할 것이 없음
		System.out.println("입력된 값 : " + value);
		if (value < 0) {
			System.out.println("음수입니다.");
		}
	}
}









