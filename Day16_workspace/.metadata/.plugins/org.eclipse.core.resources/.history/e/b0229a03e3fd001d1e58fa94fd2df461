package classSpace;

public class IntBox {
	private String name;
	private boolean state;
	private int data;
	
	public IntBox() {
		this("정수상자");
	}
	public IntBox(String name) {
		this.name = name;
		state = false;
		data = 0;
	}
	public IntBox(IntBox that) {
		this.name = new String(that.name);
		this.state = that.state;
		this.data = that.data;
	}
	
 	public void setName(String name) {
		this.name = name;
	}
 	public void setData(int data) {
 		this.data = data;
 	}
	
	public String getName() {
		return name;
	}
	public boolean getState() {
		return state;
	}

	public void open() {
		if (!state) state = true;
	}
	public void close() {
		if (state) state = false;
	}
}